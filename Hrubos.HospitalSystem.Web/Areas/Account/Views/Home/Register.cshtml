@model RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/account.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.min.css" asp-append-version="true" />
}

<section class="section-container">
    <div class="section-header">
        <h2>Registrace</h2>
        <p>Vytvořte si účet. Slibujeme, že to nebude bolet.</p>
    </div>

    <div class="card">
        <form asp-action="Register" method="post">
            <div class="form-group">
                <label asp-for="UserName">Uživatelské jméno</label>
                <input asp-for="UserName" placeholder="prezdivka" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">Jméno</label>
                <input asp-for="FirstName" placeholder="Jan" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Příjmení</label>
                <input asp-for="LastName" placeholder="Novák" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" placeholder="jan.novak@nemocnice.cz" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Telefon</label>
                <input asp-for="PhoneNumber" placeholder="777 888 999" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Heslo</label>
                <input asp-for="Password" type="password" placeholder="Tajné heslo" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RepeatedPassword">Heslo znovu</label>
                <input asp-for="RepeatedPassword" type="password" placeholder="Pro jistotu ještě jednou" />
                <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
            </div>

            <div class="buttons register">
                <button type="submit">
                    <i class='bx bx-user-plus'></i> Zaregistrovat se
                </button>
                
                <p class="text">Již máte účet?</p>

                <a asp-action="Login" class="button">
                    <i class='bx bx-log-in'></i> Přihlásit se
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validations/FirstLetterCapitalized.js"></script>
}
