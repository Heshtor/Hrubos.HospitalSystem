@model LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/account.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.min.css" asp-append-version="true" />
}

<section class="account-container">
    <div class="section-header">
        <h2>Přihlášení</h2>
        <p>Vítejte zpět. Doufáme, že jste si umyli ruce.</p>
    </div>

    <div class="form-card">
        <form asp-action="Login" method="post">
            @if (Model?.LoginFailed == true)
            {
                <div class="login-failed">
                    <i class='bx bx-error-circle'></i> Neplatné jméno nebo heslo.
                </div>
            }

            <div class="form-group">
                <label asp-for="UserName">Uživatelské jméno</label>
                <input asp-for="UserName" placeholder="prezdivka" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Heslo</label>
                <input asp-for="Password" type="password" placeholder="Tajné heslo" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="buttons login">
                <button type="submit">
                    <i class='bx bx-log-in'></i> Přihlásit se
                </button>
                
                <p class="login-text">Ještě nemáte účet?</p>

                <a asp-action="Register" class="button">
                    <i class='bx bx-user-plus'></i> Zaregistrovat se
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
