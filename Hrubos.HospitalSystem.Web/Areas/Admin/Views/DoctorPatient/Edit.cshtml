@model DoctorPatient
@{
    ViewData["Title"] = "Upravit vazbu doktor-pacient";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/form.min.css" asp-append-version="true" />
}

<section class="section-container">
    <div class="section-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="PatientId">Pacient</label>
                <select asp-for="PatientId" asp-items="ViewBag.PatientsList"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DoctorId">Doktor</label>
                <select asp-for="DoctorId" asp-items="ViewBag.DoctorsList"></select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="buttons">
                <button type="submit">
                    <i class='bx bx-save'></i> Uložit změny
                </button>
                <a asp-action="Select" class="button">
                    <i class='bx bx-x-circle'></i> Zrušit
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
