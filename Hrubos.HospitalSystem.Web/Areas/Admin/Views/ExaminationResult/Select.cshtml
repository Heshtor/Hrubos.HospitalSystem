@model IList<ExaminationResult>

@{
    ViewData["Title"] = "Výsledky vyšetření";
}
<h1>@ViewData["Title"]</h1>

<a asp-action="Create">Vytvořit nový výsledek vyšetření</a>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Popis</th>
                <th scope="col">Hodnoty</th>
                <th scope="col">Příloha</th>
                <th scope="col">Editovat</th>
                <th scope="col">Smazat</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@Model[i].Id</th>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Values</td>
                    <td>@Model[i].AttachmentSrc</td>
                    <td><a asp-action="Edit" asp-route-id="@Model[i].Id">Editovat</a></td>
                    <td><a asp-action="Delete" asp-route-id="@Model[i].Id" onclick="return ConfirmDelete();">Smazat</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Tabulka výsledků vyšetření je prázdná!</p>
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}
