@model IList<ExaminationResult>
@{
    ViewData["Title"] = "Výsledky vyšetření";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/table.min.css" asp-append-version="true" />
}

<section class="section-container">
    <div class="section-header">
        <h2>@ViewData["Title"]</h2>
        
        <a asp-action="Create" class="button">
            <i class='bx bx-plus'></i> Nový výsledek vyšetření
        </a>
    </div>

    <div class="card">
        @if (Model != null && Model.Count > 0)
        {
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Popis</th>
                            <th scope="col">Hodnoty</th>
                            <th scope="col">Příloha</th>
                            <th scope="col">Vyšetření</th>
                            <th scope="col">Akce</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Description</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Values))
                                    {
                                        <span>@item.Values</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AttachmentSrc))
                                    {
                                        <a href="@item.AttachmentSrc" target="_blank" title="zobrazit přílohu">
                                            <i class='bx bx-file'></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if(item.Examination != null)
                                    {
                                        <span class="exam-link">[@item.Examination.Id] @item.Examination.ProblemDescription</span>
                                    }
                                    else
                                    {
                                        <span>neznámé</span>
                                    }
                                </td>
                                <td>
                                    <div class="buttons">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="button edit" title="upravit">
                                            <i class='bx bx-pencil'></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="button delete" onclick="return ConfirmDelete();" title="smazat">
                                            <i class='bx bx-trash'></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty">
                <p>Zatím zde nejsou žádné výsledky vyšetření.</p>
            </div>
        }
    </div>
</section>

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}
