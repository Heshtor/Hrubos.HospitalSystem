@model SystemSetting
@{
    ViewData["Title"] = "Upravit nastavení v nemocničním systému";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/form.min.css" asp-append-version="true" />
}

<section class="section-container">
    <div class="section-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Key">Klíč</label>
                <input asp-for="Key" placeholder="@Model.Key" readonly style="cursor: not-allowed;" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Value">Hodnota</label>
                <input asp-for="Value" placeholder="@Model.Value" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

            <div class="buttons">
                <button type="submit">
                    <i class='bx bx-save'></i> Uložit změny
                </button>
                <a asp-action="Select" class="button">
                    <i class='bx bx-x-circle'></i> Zrušit
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
