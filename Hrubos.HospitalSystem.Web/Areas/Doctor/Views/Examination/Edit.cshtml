@model Examination
@{
    string patientName = Model.Patient != null ? $"{Model.Patient.FirstName} {Model.Patient.LastName} ({Model.Patient.UserName})" : "Neznámý pacient";

    ViewData["Title"] = $"Upravit vyšetření pacienta: {patientName}";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/form.min.css" asp-append-version="true" />
}

<section class="section-container">
    <div class="section-header">
        <h2>@ViewData["Title"]</h2>
    </div>

    <div class="card">
        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="DateTime">Datum a čas</label>
                <input asp-for="DateTime"
                       type="datetime-local"
                       asp-format="{0:yyyy-MM-ddTHH:mm}"
                       value="@(Model.DateTime == DateTime.MinValue ? DateTime.Now.ToString("yyyy-MM-ddTHH:mm") : Model.DateTime.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProblemDescription">Popis problému</label>
                <input asp-for="ProblemDescription" placeholder="@Model.ProblemDescription" />
                <span asp-validation-for="ProblemDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExaminationTypeId">Typ vyšetření</label>
                <select asp-for="ExaminationTypeId" asp-items="ViewBag.ExaminationTypesList"></select>
                <span asp-validation-for="ExaminationTypeId" class="text-danger"></span>
            </div>

            <div class="buttons">
                <button type="submit">
                    <i class='bx bx-save'></i> Uložit změny
                </button>
                <a asp-action="Select" asp-route-patientId="@Model.PatientId" class="button">
                    <i class='bx bx-x-circle'></i> Zrušit
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
